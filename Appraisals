appraise "fluentd v0.12 with backport_dig" do
  gem "fluentd", "~> 0.12.0"
  gem "backport_dig", "~> 1.0.0"
end

appraise "fluentd v0.12 without backport_dig" do
  gem "fluentd", "~> 0.12.0"
end

appraise "fluentd v1.0 with backport_dig" do
  gem "fluentd", "~> 1.0.0"
  gem "backport_dig", "~> 1.0.0"
end

appraise "fluentd v1.0 without backport_dig" do
  gem "fluentd", "~> 1.0.0"
end
